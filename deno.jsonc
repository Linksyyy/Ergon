{
	"tasks": {
		"setup": "deno upgrade; deno install --allow-scripts",
		"dev": "deno run -A --watch wa.ts"
	},
	"imports": {
		// modules
		"imageScript": "https://deno.land/x/imagescript@1.3.0/mod.ts",
		"luxon": "https://moment.github.io/luxon/es6/luxon.js",
		"humanize-duration": "npm:humanize-duration@^3.32.1",
		"sqlite": "https://deno.land/x/sqlite@v3.9.1/mod.ts",
		"grammy": "https://deno.land/x/grammy@v1.36.1/mod.ts",
		"gemini": "npm:@google/genai@^0.10.0",
		"qr": "npm:qrcode-terminal@^0.12.0",
		"wa": "npm:whatsapp-web.js@^1.27.0",
		// files
		"types": "./conf/types/types.d.ts",
		"defaults": "./conf/defaults.json",
		"cache": "./util/cache.ts",
		"db": "./plugin/db.ts",
		"main": "./wa.ts",
		// folders
		"plugin/": "./plugin/",
		"class/": "./class/",
		"util/": "./util/"
	},
	"fmt": { // DENO Formatter settings
		"indentWidth": 4,
		"singleQuote": true,
		"useTabs": true,
		"semiColons": false,
		"lineWidth": 100,
		"exclude": ["../build", "auth/"]
	},
	"lint": { // DENO Lint rules
		"rules": {
			"exclude": ["no-explicit-any"]
		} // does not throws at any any
	},
	"nodeModulesDir": "auto",
	"lock": false,
	"unstable": ["byonm"], // DENO unstable features
	"compilerOptions": {
		"types": ["./types/global.d.ts"]
	}
}
